mixin orders({ orders })
  .orders&attributes(attributes)
    .container
      .orders__inner
        .orders__heading-wrapper
          +main-heading({
            text: 'Мои заказы',
            number: reviews ? 5 : 0
          })
        +items-navigation({
          links: ['Текущие', 'Архив', 'Все']
        })
        if orders
          .orders__list-wrapper-2
            .orders__list-wrapper
              +orders-list({ orders })
        else
          .orders__placeholder-wrapper
            +placeholder-mini({
              text: 'Ничего не найдено',
              button: {
                text: 'В каталог',
                href: 'categories.html'
              }
            })
