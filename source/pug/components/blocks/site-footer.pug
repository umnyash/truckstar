mixin site-footer__navigation-item({ text, href, modal, page })
  li.site-footer__navigation-item
    a.site-footer__navigation-link(
      href= !(pageClass === page) && href
      data-modal-opener= modal
    )&attributes(attributes)= text


mixin site-footer
  footer.site-footer&attributes(attributes)
    .container
      .site-footer__inner
        .site-footer__top
          .site-footer__contacts-1
            +contacts-list({ groups: [
              contactsLists.address1,
              contactsLists.address2,
            ]})(class='contacts-list--size_m contacts-list--theme_light contacts-list--grid_column')
          .site-footer__contacts-2
            +contacts-list({ groups: [
              contactsLists.phonesAll,
              contactsLists.email,
            ]})(class='contacts-list--size_m contacts-list--theme_light contacts-list--grid_column')
          .site-footer__subscription
            +simple-form({
              heading: 'Подписаться на рассылку:',
              action: 'https://fakestoreapi.com/products',
              method: 'post',
              field: {
                name: 'email',
                type: 'email',
                placeholder: 'E-mail',
              },
              hidableResetButton: true,
            })
            +socials-list(class='socials-list--alter')
          .site-footer__logo
            +logo
          ul.site-footer__navigation-1
            +site-footer__navigation-item({ text: 'О нас', href: 'company.html', page: 'company-page' })

            if pageClass === 'info-page'
              +site-footer__navigation-item({ text: 'Вопрос-ответ', href: '#faq' })
              +site-footer__navigation-item({ text: 'Гарантия', href: '#guarantee' })
            else
              +site-footer__navigation-item({ text: 'Вопрос-ответ', href: 'info.html#faq' })
              +site-footer__navigation-item({ text: 'Гарантия', href: 'info.html#guarantee' })

            +site-footer__navigation-item({ text: 'Отзывы', href: 'reviews.html', page: 'reviews-page' })

            if pageClass === 'info-page'
              +site-footer__navigation-item({ text: 'Оплата', href: '#payment' })
            else
              +site-footer__navigation-item({ text: 'Оплата', href: 'info.html#payment' })

            +site-footer__navigation-item({ text: 'Контакты', href: 'contacts.html', page: 'contacts-page' })

            if pageClass === 'info-page'
              +site-footer__navigation-item({ text: 'Доставка', href: '#delivery' })
            else
              +site-footer__navigation-item({ text: 'Доставка', href: 'info.html#delivery' })

            +site-footer__navigation-item({ text: 'Мои заказы', href: 'account.html', page: 'account-page' })

            if pageClass === 'info-page'
              +site-footer__navigation-item({ text: 'Обмен и возврат', href: '#exchange-and-return' })
            else
              +site-footer__navigation-item({ text: 'Обмен и возврат', href: 'info.html#exchange-and-return' })

            +site-footer__navigation-item({ text: 'Выкуп машин', href: '#', modal: 'buy-form' })
          ul.site-footer__navigation-2
            +site-footer__navigation-item({ text: 'Chevrolet', href: 'truck-categories.html', page: 'truck-categories-page' })
            +site-footer__navigation-item({ text: 'Scania', href: 'truck-categories.html', page: 'truck-categories-page' })
            +site-footer__navigation-item({ text: 'Daf', href: 'truck-categories.html', page: 'truck-categories-page' })
            +site-footer__navigation-item({ text: 'Volvo', href: 'truck-categories.html', page: 'truck-categories-page' })
            +site-footer__navigation-item({ text: 'Iveco', href: 'truck-categories.html', page: 'truck-categories-page' })
            +site-footer__navigation-item({ text: 'КАМАЗ', href: 'truck-categories.html', page: 'truck-categories-page' })
            +site-footer__navigation-item({ text: 'Man', href: 'truck-categories.html', page: 'truck-categories-page' })
            +site-footer__navigation-item({ text: 'Lada', href: 'truck-categories.html', page: 'truck-categories-page' })
            +site-footer__navigation-item({ text: 'Mercedes-Benz', href: 'truck-categories.html', page: 'truck-categories-page' })
            +site-footer__navigation-item({ text: 'Tatra', href: 'truck-categories.html', page: 'cattruck-categories-page' })
            +site-footer__navigation-item({ text: 'Renault', href: 'truck-categories.html', page: 'cattruck-categories-page' })
        .site-footer__bottom
          p.site-footer__copyright © 2024, Truckstar. Все права защищены
