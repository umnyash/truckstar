                    img.menu__catalog-navigation-button-image(src='img/brands/mercedes-benz.svg' width='60' height='60' alt='Mercedes-Benz.' loading='lazy')
                  +menu__catalog-navigation-list({ prefix: 'Mercedes-Benz', mode: 'brand' })
                li.menu__catalog-navigation-item
                  button.menu__catalog-navigation-button.menu__catalog-navigation-button--brand Man
                    img.menu__catalog-navigation-button-image(src='img/brands/man.svg' width='60' height='34' alt='Man.' loading='lazy')
                  +menu__catalog-navigation-list({ prefix: 'Man', mode: 'brand' })
                li.menu__catalog-navigation-item
                  button.menu__catalog-navigation-button.menu__catalog-navigation-button--brand Scania
                    img.menu__catalog-navigation-button-image(src='img/brands/scania.svg' width='60' height='56' alt='Scania.' loading='lazy')
                  +menu__catalog-navigation-list({ prefix: 'Scania', mode: 'brand' })
            .menu__catalog-navigation-section(data-name='categories')
              ul.menu__catalog-navigation-list(data-level='0')
                li.menu__catalog-navigation-item
                  a.menu__catalog-navigation-link.menu__catalog-navigation-button--category(href='catalog.html') Все запчасти
