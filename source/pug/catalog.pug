extends layout/layout

block variables
  - var title = 'Выпускной коллектор'
  - var pageClass = 'catalog-page'

block content
  +breadcrumbs({ links: [
    {
      text: 'Каталог',
      href: 'categories.html'
    },
    {
      text: 'Двигатель',
      href: 'subcategories.html'
    },
    {
      text: title,
    }
  ]})
  +catalog({
    filter: {
      modelSelection: true
    },
    shortcuts: true,
  })
  +products({ heading: '<b class="heading__accent">Популярные</b> запчасти', products })
  +offer
