block variables

include ../mock/data
include ../components/components

doctype html
html.page(class= pageClass lang='ru')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='preload' href='fonts/inter-400.woff2' as='font' type='font/woff2' crossorigin)
    link(rel='preload' href='fonts/inter-500.woff2' as='font' type='font/woff2' crossorigin)
    link(rel='stylesheet' href='css/style.min.css')
    title= title
    meta(name='description' content='«Truckstar» — Грузовая разборка тягачей из Европы, таких как: Daf, Iveco, MAN, Mercedes-Benz, Scania, Renault, Volvo.')
    meta(name='keywords' content='Truckstar, разборка тягачей, новые детали тягачей, б/у детали тягачей, поставка деталей тягачей.')
  body.page__body
    +site-header(class='page__site-header')
    main.page__content
      block content
    +site-footer(class='page__site-footer')
    block modals
    script(src='js/script.min.js')
